<aura:component controller="WeatherDetailsClass" implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="cityName" type="String" default="Belgaum"/>
    <aura:attribute name="forecastList" type="List"/>
    <aura:attribute name="isDarkMode" type="Boolean" default="false"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="{!'container ' + (v.isDarkMode ? 'dark-mode' : '')}">
        <lightning:input label="Enter City" value="{!v.cityName}" onchange="{!c.fetchForecast}" />
        <lightning:button label="Toggle Dark Mode" onclick="{!c.toggleDarkMode}" />

        <div class="forecast-container">
            <aura:iteration items="{!v.forecastList}" var="day">
                <div class="forecast-card">
                    <p>{!day.dayLabel}</p>
                    <img src="{!day.iconUrl}" alt="icon"/>
                    <p>{!day.temperature} Â°C</p>
                    <p>{!day.description}</p>
                </div>
            </aura:iteration>
        </div>
    </div>
</aura:component>
